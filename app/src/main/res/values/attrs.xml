<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DotsIndicator">
        <attr name="dots_count" format="integer" />
        <attr name="selected_dot_scale_factor" format="float" />
        <attr name="selected_dot_resource" format="reference" />
        <attr name="unselected_dot_resource" format="reference" />
        <attr name="dot_height" format="dimension" />
        <attr name="dot_width" format="dimension" />
        <attr name="margins_between_dots" format="dimension" />
    </declare-styleable>


    <declare-styleable name="ScalingLayout">
        <attr name="radiusFactor" format="float"/>
    </declare-styleable>

    <declare-styleable name="RoundedCornerLayout">
        <attr name="topRadius" format="dimension|reference" />
        <attr name="bottomRadius" format="dimension|reference" />
        <attr name="topLeftRadius" format="dimension|reference" />
        <attr name="topRightRadius" format="dimension|reference" />
        <attr name="bottomLeftRadius" format="dimension|reference" />
        <attr name="bottomRightRadius" format="dimension|reference" />
    </declare-styleable>
</resources>